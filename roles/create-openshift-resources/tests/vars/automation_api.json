{
	"openshift_clusters": [
		{
			"openshift_host_env": "10.1.2.2:8443",
			"openshift_resources": {
				"projects": [
					{
						"name": "labs-api-dev",
						"display_name": "Labs API - Dev",
						"environment_type": "build",
						"apps": [
							{
								"name": "automation-api",
								"scm_url": "https://github.com/rht-labs/automation-api.git",
								"scm_ref": "master",
								"build_tool": "mvn-3",
								"build_application_commands": [
									"mvn clean install"
								],
								"build_image_commands": [
									"oc login 10.1.2.2:8443 --token=$OPENSHIFT_API_TOKEN --insecure-skip-tls-verify",
									"oc start-build automation-api --from-dir=. --follow -n labs-api-dev"
								],
								"labels": {
									"provider": "fabric8"
								},
								"environment_variables": {
									"POSTGRESQL_SVC": "postgresql.labs-api-dev.svc.cluster.local",
									"POSTGRESQL_USER": "autoautoauto",
									"POSTGRESQL_PASSWORD": "password",
									"POSTGRESQL_DATABASE": "automation"
								},
								"routes": [
									{
										"route_type": "default"
									}
								]
							}
						],
						"group_to_role": [
							{
								"group": {
									"name": "system:serviceaccounts"
								},
								"roles": [
									{
										"name": "view"
									}
								]
							}
						]
					},
					{
						"name": "labs-api-delivery",
						"display_name": "Labs API - Delivery",
						"environment_type": "promotion",
						"apps": [
							{
								"name": "automation-api",
								"base_image": "automation-api",
								"routes": [
									{
										"route_type": "passthrough",
										"hostname": "custom-domain.dev.com",
										"port": "8080",
										"service": {
											"ports": [
												{
													"port": 8080,
													"protocol": "TCP",
													"target_port": 8080
												},
												{
													"port": 5000,
													"protocol": "TCP",
													"target_port": 5000
												}
											]
										}
									}
								]
							}
						]
					}
				]
			}
		}
	]
}
